doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title ChatApp UI Dashboard 
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='css/main.css')
  body
    .app-container
      .app-left-small
        .header-icon.menu-icon
          svg.feather.feather-grid(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
            rect(x='3' y='3' width='7' height='7')
            rect(x='14' y='3' width='7' height='7')
            rect(x='14' y='14' width='7' height='7')
            rect(x='3' y='14' width='7' height='7')

        .left-add-icon.addRooms(data-toggle="modal" data-target=".bd-example-modal-sm")
            button.add
          
      .app-left-medium
        .header-icon
          .menu-top
            .menu-text
              h6 ChatRooms
        .side-menu
          ul.list-unstyled
            
            
      .app-right-big
        .app-header-main
          .left-header-title
            
          
          .header-user-profile
            .pro-pic
              .chat-smg-img
                  .img.bg-color
                    span.img-color S
            .pro-name
              h6
                | shecoomontano
            .pro-down
              svg.feather.feather-chevron-down(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                polyline(points='6 9 12 15 18 9')
        .app-container-inside
          .app-inside-left
            .chat-area
            .chat-arrea-footer(style="position: absolute;left: 23%;right: 17%;bottom: 0;height: 50px;z-index: 0;")
              .chat-input
                input(type='text' placeholder='Escribe tu mensaje...' id='msgnw')
            .footer-chat-right
                  
                .footer-chat-mobile
                  .tag-person
                    svg.feather.feather-plus(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      line(x1='12' y1='5' x2='12' y2='19')
                      line(x1='5' y1='12' x2='19' y2='12')
                  .tag-emoji.ml-2.mr-2
                    span
                      | ðŸ˜€
                  .drop-att
                    svg.feather.feather-paperclip(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
                      path(d='M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48')
          .app-inside-right
            .right-icon-arrow
            
        .modal.fade.bd-example-modal-sm#mRooms(tabindex='-1' role='dialog' aria-labelledby='mySmallModalLabel' aria-hidden='true')
          .modal-dialog.modal-sm
            .modal-content
              .modal-header
                h5.modal-title Agregar Sala
                button.close(type='button' data-dismiss='modal' aria-label='Close')
                  span(aria-hidden='true') &times;
              .modal-body
                .form-floating
                  input#nameRoom.form-control(type='text' placeholder='Nombre' name='newroom')
              .modal-footer
                button.btn.btn-primary#sendRoom(type='button') Guardar
                button.btn.btn-secondary(type='button' data-dismiss='modal') Cerrar
            
            
       
      script(src='https://code.jquery.com/jquery-3.6.0.min.js' integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
  crossorigin="anonymous")
      script(src='https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js' integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous")
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js' integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")
      script(src='js/main.js')
      script(src="/socket.io/socket.io.js")
      script(src='js/home.js')
      
